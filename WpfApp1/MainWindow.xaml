<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Румбах проект" Height="500" Width="900">

    <Grid>
        <TabControl x:Name="MainTabControl" SelectionChanged="TabControl_SelectionChanged">
            <!-- Вкладка Товары -->
            <TabItem Header="Товары">
                <Grid>
                    <DataGrid x:Name="ProductsDataGrid" 
                             AutoGenerateColumns="True"
                             Margin="10"/>
                </Grid>
            </TabItem>

            <!-- Вкладка Авторизация -->
            <TabItem Header="Авторизация">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <TextBlock Text="Движение товаров и товарооборот"
                              Grid.Row="0"
                              FontSize="16" FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,30"/>

                    <!-- Поле для пароля -->
                    <TextBlock Text="Пароль:" 
                              Grid.Row="1"
                              Margin="0,0,0,10" VerticalAlignment="Center"/>
                    <PasswordBox x:Name="PasswordBox" 
                                Grid.Row="2"
                                Margin="0,0,0,20" Height="25" Width="200"
                                HorizontalAlignment="Left"/>

                    <!-- Кнопка авторизации -->
                    <Button x:Name="LoginButton" 
                           Content="Авторизоваться" 
                           Grid.Row="3"
                           Width="120" Height="30"
                           HorizontalAlignment="Left"
                           Click="LoginButton_Click"/>

                    <!-- Статус авторизации -->
                    <TextBlock x:Name="AuthStatusText" 
                              Grid.Row="4"
                              Margin="0,20,0,0"
                              Foreground="Gray"/>
                </Grid>
            </TabItem>

            <!-- Вкладка Админ панель -->
            <TabItem Header="Админ панель" x:Name="AdminTabItem">
                <Grid Margin="10" IsEnabled="{Binding IsAdminAuthenticated}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ID -->
                    <TextBlock Text="ID записи:" 
                              Grid.Row="0" Grid.Column="0" 
                              Margin="0,0,10,10" VerticalAlignment="Center"/>
                    <TextBox x:Name="RecordIdTextBox" 
                            Grid.Row="0" Grid.Column="1" 
                            Margin="0,0,0,10" Height="25"/>

                    <!-- Название товара -->
                    <TextBlock Text="Название товара:" 
                              Grid.Row="1" Grid.Column="0" 
                              Margin="0,0,10,10" VerticalAlignment="Center"/>
                    <TextBox x:Name="ProductNameTextBox" 
                            Grid.Row="1" Grid.Column="1" 
                            Margin="0,0,0,10" Height="25"/>

                    <!-- Количество товара -->
                    <TextBlock Text="Количество товара:" 
                              Grid.Row="2" Grid.Column="0" 
                              Margin="0,0,10,10" VerticalAlignment="Center"/>
                    <TextBox x:Name="ProductQuantityTextBox" 
                            Grid.Row="2" Grid.Column="1" 
                            Margin="0,0,0,10" Height="25"/>

                    <!-- Кнопки -->
                    <Button x:Name="AddProductButton" 
                           Content="Добавить запись" 
                           Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                           Margin="0,0,0,10" Height="30" 
                           Click="AddProductButton_Click"/>

                    <Button x:Name="DeleteByIdButton" 
                           Content="Удалить запись по ID" 
                           Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                           Margin="0,0,0,10" Height="30"
                           Click="DeleteByIdButton_Click"/>

                    <Button x:Name="UpdateQuantityButton" 
                           Content="Изменить количество товара" 
                           Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                           Margin="0,0,0,10" Height="30"
                           Click="UpdateQuantityButton_Click"/>

                    <Button x:Name="ClearAllButton" 
                           Content="Удалить все записи" 
                           Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                           Margin="0,0,0,10" Height="30"
                           Click="ClearAllButton_Click"/>

                    <!-- Сообщение о необходимости авторизации -->
                    <Border Grid.Row="0" Grid.RowSpan="8" Grid.Column="0" Grid.ColumnSpan="2"
                           Background="#CCFFFFFF" Visibility="{Binding AdminPanelLockVisibility}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Требуется авторизация" 
                                      FontSize="16" FontWeight="Bold"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Перейдите во вкладку 'Авторизация' и введите пароль"
                                      TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Массовое добавление" x:Name="BulkInsertTabItem">
                <Grid Margin="20" IsEnabled="{Binding IsAdminAuthenticated}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Заголовок -->
                    <TextBlock Text="Массовое добавление записей" 
                              Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                              FontSize="16" FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>

                    <!-- Поля для названий товаров -->
                    <TextBlock Text="Названия товаров:" 
                              Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                              FontWeight="Bold"
                              Margin="0,0,0,10"/>

                    <TextBox x:Name="BulkProductName1" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5" Height="25"/>
                    <TextBox x:Name="BulkProductName2" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5" Height="25"/>
                    <TextBox x:Name="BulkProductName3" Grid.Row="4" Grid.Column="1" Margin="0,0,0,5" Height="25"/>
                    <TextBox x:Name="BulkProductName4" Grid.Row="5" Grid.Column="1" Margin="0,0,0,5" Height="25"/>
                    <TextBox x:Name="BulkProductName5" Grid.Row="6" Grid.Column="1" Margin="0,0,0,5" Height="25"/>
                    <TextBox x:Name="BulkProductName6" Grid.Row="7" Grid.Column="1" Margin="0,0,0,5" Height="25"/>
                    <TextBox x:Name="BulkProductName7" Grid.Row="8" Grid.Column="1" Margin="0,0,0,5" Height="25"/>
                    <TextBox x:Name="BulkProductName8" Grid.Row="9" Grid.Column="1" Margin="0,0,0,5" Height="25"/>
                    <TextBox x:Name="BulkProductName9" Grid.Row="10" Grid.Column="1" Margin="0,0,0,5" Height="25"/>
                    <TextBox x:Name="BulkProductName10" Grid.Row="11" Grid.Column="1" Margin="0,0,0,10" Height="25"/>

                    <!-- Номера для полей -->
                    <TextBlock Text="1." Grid.Row="2" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <TextBlock Text="2." Grid.Row="3" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <TextBlock Text="3." Grid.Row="4" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <TextBlock Text="4." Grid.Row="5" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <TextBlock Text="5." Grid.Row="6" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <TextBlock Text="6." Grid.Row="7" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <TextBlock Text="7." Grid.Row="8" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <TextBlock Text="8." Grid.Row="9" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <TextBlock Text="9." Grid.Row="10" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <TextBlock Text="10." Grid.Row="11" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>

                    <!-- Поля для количеств товаров -->
                    <TextBlock Text="Количество:" 
                              Grid.Row="1" Grid.Column="2"
                              FontWeight="Bold"
                              Margin="10,0,0,10"/>

                    <TextBox x:Name="BulkProductQuantity1" Grid.Row="2" Grid.Column="2" Margin="10,0,0,5" Height="25" Text="0"/>
                    <TextBox x:Name="BulkProductQuantity2" Grid.Row="3" Grid.Column="2" Margin="10,0,0,5" Height="25" Text="0"/>
                    <TextBox x:Name="BulkProductQuantity3" Grid.Row="4" Grid.Column="2" Margin="10,0,0,5" Height="25" Text="0"/>
                    <TextBox x:Name="BulkProductQuantity4" Grid.Row="5" Grid.Column="2" Margin="10,0,0,5" Height="25" Text="0"/>
                    <TextBox x:Name="BulkProductQuantity5" Grid.Row="6" Grid.Column="2" Margin="10,0,0,5" Height="25" Text="0"/>
                    <TextBox x:Name="BulkProductQuantity6" Grid.Row="7" Grid.Column="2" Margin="10,0,0,5" Height="25" Text="0"/>
                    <TextBox x:Name="BulkProductQuantity7" Grid.Row="8" Grid.Column="2" Margin="10,0,0,5" Height="25" Text="0"/>
                    <TextBox x:Name="BulkProductQuantity8" Grid.Row="9" Grid.Column="2" Margin="10,0,0,5" Height="25" Text="0"/>
                    <TextBox x:Name="BulkProductQuantity9" Grid.Row="10" Grid.Column="2" Margin="10,0,0,5" Height="25" Text="0"/>
                    <TextBox x:Name="BulkProductQuantity10" Grid.Row="11" Grid.Column="2" Margin="10,0,0,10" Height="25" Text="0"/>

                    <!-- Кнопка добавления -->
                    <Button x:Name="BulkInsertButton" 
                           Content="Добавить все записи" 
                           Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="3"
                           Margin="0,20,0,10" Height="35"
                           Click="BulkInsertButton_Click"
                           FontWeight="Bold"/>

                    <!-- Статус операции -->
                    <TextBlock x:Name="BulkInsertStatus" 
                              Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="3"
                              Margin="0,10,0,0"
                              TextWrapping="Wrap"/>

                    <!-- Сообщение о необходимости авторизации -->
                    <Border Grid.Row="0" Grid.RowSpan="14" Grid.Column="0" Grid.ColumnSpan="3"
                           Background="#CCFFFFFF" Visibility="{Binding AdminPanelLockVisibility}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Требуется авторизация" 
                                      FontSize="16" FontWeight="Bold"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Перейдите во вкладку 'Авторизация' и введите пароль"
                                      TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
